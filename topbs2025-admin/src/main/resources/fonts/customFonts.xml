    <!-- 華文宋體 -->
    <fontFamily name="华文宋体">
        <normal>fonts/stsong.TTF</normal>
        <bold>fonts/stsong.TTF</bold>
        <italic>fonts/stsong.TTF</italic>
        <boldItalic>fonts/stsong.TTF</boldItalic>
